<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h2>Detalhes do Pagamento</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/admin/pagamentos/save">
                        <input type="hidden" name="id_venda" value="<%= id_venda %>">
                        <label for="payment-method">Forma de Pagamento</label>
                        <select name="forma_pagamento" class="form-select">
                            <option value="dinheiro"> Dinheiro </option>
                            <option value="cartao_credito">Cartão de Crédito</option>
                            <option value="cartao_debito">Cartão de Débito </option>
                            <option value="pix"> Pix </option>
                            <option value="outro"> Outro </option>
                        </select><br>
                        <input class="form-control" type="text" name="valor_total"
                            placeholder="Qual o valor total?"><br>
                        <input class="form-control" type="text" name="parcelas" placeholder="Total de parcelas"><br>
                        <button class="btn btn-success">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>

        <%- include('../../partials/footer.ejs') %>