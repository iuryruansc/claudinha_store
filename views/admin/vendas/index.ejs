<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">
                                        <%- include('../../partials/messages.ejs') %>

                    <div id="error-popup-container"></div>
                    <div class="d-flex justify-content-between align-items-center my-4">
                        <h2 class="mb-0 h4">
                            <i class="bi bi-receipt-cutoff me-2"></i>
                            Gerenciamento de Vendas
                        </h2>
                        <a href="/admin/vendas/new" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Registrar Nova Venda
                        </a>
                    </div>
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="table-data" class="table table-hover align-middle">
                                    <thead class="table-dark">
                                        <tr>
                                            <th style="width: 50px;"></th>
                                            <th>Cliente</th>
                                            <th>Data</th>
                                            <th>Resumo da Venda</th>
                                            <th>Total</th>
                                            <th class="text-center">Status</th>
                                            <th class="text-center">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody id="vendas-table-body">
    <% vendas.forEach((venda, index) => { %>
        <%
            let detailsContent = '';
            if (venda.itemvendas && venda.itemvendas.length > 0) {
                venda.itemvendas.forEach(item => {
                    const subtotal = parseFloat(item.preco_unitario) * item.quantidade;
                    const produtoNome = item.produto ? item.produto.nome : 'Produto Excluído';
                    const subtotalFormatado = subtotal.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });

                    detailsContent += '<li class="list-group-item d-flex justify-content-between align-items-center">';
                    detailsContent += '<span>' + produtoNome + ' <small class="text-muted">(x' + item.quantidade + ')</small></span>';
                    detailsContent += '<span class="fw-semibold">' + subtotalFormatado + '</span>';
                    detailsContent += '</li>';
                });
            } else {
                detailsContent += '<li class="list-group-item">Nenhum item encontrado.</li>';
            }

            const detailsHtml = `
                <div class="p-3 bg-white border-top">
                    <h6 class="mb-2"><i class="bi bi-list-ul"></i> Itens desta Venda:</h6>
                    <ul class="list-group list-group-flush">${detailsContent}</ul>
                </div>
            `;

            const resumoItens = (() => {
                if (!venda.itemvendas || venda.itemvendas.length === 0) return 'Nenhum item';
                const primeiroItem = venda.itemvendas[0]?.produto?.nome || 'Item desconhecido';
                const outrosItens = venda.itemvendas.length - 1;
                return outrosItens > 0 ? `${primeiroItem} e +${outrosItens}` : primeiroItem;
            })();
        %>

        <tr data-details="<%= encodeURIComponent(detailsHtml) %>">
            <td>
                <button class="btn btn-sm btn-outline-secondary expand-btn" type="button">
                    <i class="bi bi-chevron-down"></i>
                </button>
            </td>
            <td>
                <% if (venda.cliente) { %>
                    <i class="bi bi-person-circle me-1"></i><%= venda.cliente.nome %>
                <% } else { %>
                    <span class="text-muted fst-italic">Anônimo</span>
                <% } %>
            </td>
            <td>
                <i class="bi bi-calendar me-1"></i><%= new Date(venda.data_hora).toLocaleDateString('pt-BR') %>
            </td>
            <td class="fw-semibold"><%= resumoItens %></td>
            <td class="fw-bold"><%= parseFloat(venda.valor_total).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }) %></td>
            <td class="text-center">
                <% if(venda.status === 'CONCLUIDA') { %>
                    <span class="badge bg-success">Concluída</span>
                <% } else { %>
                    <span class="badge bg-warning text-dark">Pendente</span>
                <% } %>
            </td>
            <td class="text-center">
                <a href="/admin/vendas/detalhes/<%= venda.id_venda %>" class="btn btn-sm btn-outline-primary" title="Ver detalhes da venda">
                    <i class="bi bi-eye"></i>
                </a>
            </td>
        </tr>
    <% }) %>
</tbody>
                                </table>
                        </div>
                    </div>
                </div>
                </div>
            </main>

            <%- include('../../partials/footer.ejs') %>

            <script src="/js/pages/vendas.js" type="module"></script>
        </body>

        </html>