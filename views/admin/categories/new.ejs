<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">
                    <div id="error-popup-container"></div>
                    <div class="d-flex justify-content-between align-items-center my-4">
                        <h2 class="mb-0 h4">
                            <i class="bi bi-tag-fill me-2"></i>
                            Cadastro de Nova Categoria
                        </h2>
                        <a href="/admin/categories" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Voltar
                        </a>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-body">
                            <form id="category-form" action="/admin/categories/save" method="POST">
                                <div class="mb-3">
                                    <label for="categoryName" class="form-label">Nome da Categoria</label>
                                    <input class="form-control" type="text" id="categoryName" name="nome"
                                        placeholder="Ex: EletrÃ´nicos, Roupas, Alimentos" required>
                                </div>
                                <button type="submit" class="btn btn-success" disabled>
                                    <i class="bi bi-check-lg me-2"></i>Cadastrar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('../../partials/footer.ejs') %>

                <script type="module">
                    import { setupSingleFieldNew } from '/js/lib/single-field-new.js';

                    document.addEventListener('DOMContentLoaded', function () {
                        setupSingleFieldNew({
                            formSelector: '#category-form',
                            inputName: 'nome',
                            redirectUrl: '/admin/categories',
                            fieldKey: 'nome'
                        });
                    });
                </script>
        </body>

        </html>