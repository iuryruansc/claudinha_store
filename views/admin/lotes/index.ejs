<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">

                    <%- include('../../partials/messages.ejs') %>
                        <div id="error-popup-container"></div>

                        <div class="d-flex justify-content-between align-items-center my-4">
                            <h2 class="mb-0 h4">
                                <i class="bi bi-box-seam me-2"></i>
                                Gerenciamento de Lotes de Estoque
                            </h2>
                            <a href="/admin/dashboard" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Voltar
                            </a>
                        </div>

                        <% if (typeof alertaEstoqueBaixo !=='undefined' && alertaEstoqueBaixo) { %>
                            <div class="alert alert-warning d-flex align-items-center justify-content-between"
                                role="alert">
                                <div>
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                    <strong>Atenção:</strong> Existem lotes com estoque baixo ou crítico.
                                </div>
                                <div>
                                    <a href="#" class="btn btn-sm btn-warning fw-bold" id="filtrar-estoque-baixo">Ver
                                        Itens</a>
                                    <a href="#" class="btn btn-sm btn-outline-secondary" id="limpar-filtro-estoque"
                                        style="display: none;">Limpar Filtro</a>
                                </div>
                            </div>
                            <% } %>

                                <div class="card shadow-sm">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table id="table-data" class="table table-hover align-middle">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th>Produto</th>
                                                        <th>Preço de Compra</th>
                                                        <th>Lote</th>
                                                        <th class="text-center">Quantidade</th>
                                                        <th>Localização</th>
                                                        <th>Status da Validade</th>
                                                        <th class="text-center">
                                                            <div
                                                                class="d-flex align-items-center justify-content-center">
                                                                <span>Ações</span>
                                                                <div class="form-check form-switch d-inline-block ms-2"
                                                                    data-bs-toggle="tooltip"
                                                                    title="Habilitar exclusão em massa">
                                                                    <input class="form-check-input" type="checkbox"
                                                                        role="switch" id="toggleExcluir">
                                                                </div>
                                                            </div>
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody id="lotes-table-body">
                                                    <% lotes.forEach(lote=> { %>
                                                        <% const produto=lote.produto; let statusTexto=`Válido até ${new
                                                            Date(lote.data_validade).toLocaleDateString('pt-BR')}`; if
                                                            (lote.statusValidade==='vencido' ) { statusTexto=`Vencido há
                                                            ${Math.abs(lote.diffDias)} dia(s)`; } else if (lote.diffDias
                                                            <=30) { statusTexto=`Vence em ${lote.diffDias} dia(s)`; } %>

                                                            <tr data-lote-id="<%= lote.id_lote %>"
                                                                data-validade="<%= lote.statusValidade %>"
                                                                data-quantidade="<%= lote.statusQuantidade %>">
                                                                <td>
                                                                    <%= produto ? produto.nome
                                                                        : 'Produto não encontrado' %>
                                                                </td>
                                                                <td>
                                                                    <%= lote.preco_produto.toLocaleString('pt-BR', {
                                                                        style: 'currency' , currency: 'BRL' }) %>
                                                                </td>
                                                                <td class="text-center">
                                                                    <%= lote.numero_lote %>
                                                                </td>
                                                                <td class="text-center fw-bold">
                                                                    <%= lote.quantidade %>
                                                                </td>
                                                                <td>
                                                                    <%= lote.localizacao %>
                                                                </td>
                                                                <td>
                                                                    <%= statusTexto %>
                                                                </td>
                                                                <td class="text-center">
                                                                    <div class="btn-group">
                                                                        <button class="btn btn-sm btn-outline-success"
                                                                            data-bs-toggle="modal"
                                                                            data-bs-target="#addQuantidadeModal"
                                                                            data-lote-id="<%= lote.id_lote %>"
                                                                            data-lote-numero="<%= lote.numero_lote %>"
                                                                            data-produto-nome="<%= produto ? produto.nome : '' %>"
                                                                            title="Adicionar quantidade">
                                                                            <i class="bi bi-plus-lg"></i>
                                                                        </button>
                                                                        <button
                                                                            class="btn btn-sm btn-outline-primary edit-lote-btn"
                                                                            data-bs-toggle="modal"
                                                                            data-bs-target="#editLoteModal"
                                                                            data-lote-id="<%= lote.id_lote %>"
                                                                            title="Editar lote">
                                                                            <i class="bi bi-pencil-fill"></i>
                                                                        </button>
                                                                        <form data-delete-form class="d-inline"
                                                                            action="/admin/lotes/delete/<%= lote.id_lote %>"
                                                                            method="POST">
                                                                            <input type="hidden" name="id_lote"
                                                                                value="<%= lote.id_lote %>">
                                                                            <button type="submit"
                                                                                class="btn btn-sm btn-outline-danger excluir-btn"
                                                                                data-bs-toggle="tooltip"
                                                                                title="Excluir lote"
                                                                                style="display: none;">
                                                                                <i class="bi bi-trash"></i>
                                                                            </button>
                                                                        </form>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                </div>
            </main>

            <%- include('../../partials/modals/add-quant-modal.ejs') %>
                <%- include('../../partials/modals/edit-lote-modal.ejs') %>

                    <%- include('../../partials/footer.ejs') %>

                        <script src="/js/pages/lotes.js" type="module"></script>
        </body>


        </html>