<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">
                    <div id="error-popup-container"></div>
                    <div class="d-flex justify-content-between align-items-center my-4">
                        <h2 class="mb-0 h4">
                            <i class="bi bi-truck me-2"></i>
                            Gerenciamento de Fornecedores
                        </h2>
                        <a href="/admin/fornecedores/new" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Novo Fornecedor
                        </a>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="table-data" class="table table-striped table-hover align-middle">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Fornecedores</th>
                                            <th class="text-center">
                                                <div class="d-flex align-items-center justify-content-center">
                                                    <span>Ações</span>
                                                    <div class="form-check form-switch ms-3">
                                                        <input aria-checked="false" class="form-check-input"
                                                            type="checkbox" role="switch" id="toggleExcluir"
                                                            title="Habilitar exclusão">
                                                    </div>
                                                </div>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="fornecedor-table-body">
                                        <% fornecedores.forEach(fornecedor=> { %>
                                            <tr>
                                                <td><strong>
                                                        <%= fornecedor.nome_fornecedor %>
                                                    </strong></td>
                                                <td class="text-center">
                                                    <div class="btn-group" role="group"
                                                        aria-label="Ações do fornecedor">
                                                        <a href="/admin/fornecedores/edit/<%= fornecedor.id_fornecedor %>"
                                                            class="btn btn-sm btn-outline-primary"
                                                            title="Editar fornecedor">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </a>
                                                        <a href="/admin/produtos/fornecedor/<%= fornecedor.id_fornecedor %>"
                                                            class="btn btn-sm btn-outline-info"
                                                            title="Ver produtos deste fornecedor">
                                                            <i class="bi bi-box-seam"></i>
                                                        </a>
                                                        <form data-delete-form
                                                            action="/admin/fornecedores/delete/<%= fornecedor.id_fornecedor %>"
                                                            method="POST" class="d-inline-block">
                                                            <input type="hidden" name="id_fornecedor"
                                                                value="<%= fornecedor.id_fornecedor %>">
                                                            <button type="submit"
                                                                class="btn btn-sm btn-outline-danger excluir-btn"
                                                                title="Excluir fornecedor" style="display: none;">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('../../partials/footer.ejs') %>

                <script type="module">
                    import { setupRowDelete } from '/js/delete-handler.js';

                    document.addEventListener('DOMContentLoaded', function () {
                        const deleteForms = document.querySelectorAll('[data-delete-form]');
                        const toggleExcluir = document.getElementById('toggleExcluir');
                        const tableBody = document.getElementById('fornecedor-table-body');

                        const tooltipTriggerList = document.querySelectorAll('[title]');
                        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));

                        setupRowDelete(deleteForms, toggleExcluir, tableBody);
                    });
                </script>
        </body>

        </html>