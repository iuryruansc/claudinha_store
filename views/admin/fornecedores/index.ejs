<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">
                    <table id="table-data" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Fornecedores</th>
                                <th>Ações
                                    <label class="form-check-label ms-2">
                                        <input type="checkbox" id="toggleExcluir" class="form-check-input">
                                        <span class="d-inline-block">Habilitar Excluir</span>
                                    </label>
                                </th>
                            </tr>
                        </thead>
                        <tbody id="fornecedor-table-body">
                            <% fornecedores.forEach(fornecedor=> { %>
                                <tr>
                                    <td>
                                        <%= fornecedor.nome_fornecedor %>
                                    </td>
                                    <td>
                                        <a href="/admin/fornecedores/edit/<%= fornecedor.id_fornecedor %>"
                                            class="btn btn-warning">Editar</a>
                                        <a href="/admin/produtos/fornecedor/<%= fornecedor.id_fornecedor %>"
                                            class="btn btn-primary">Ver
                                            Produtos</a>
                                        <form class="data-delete-form" action="/admin/fornecedores/delete/<%= fornecedor.id_fornecedor %>"
                                            style="display: inline;">
                                            <input type="hidden" name="id_fornecedor"
                                                value="<%= fornecedor.id_fornecedor %>">
                                            <button class="btn btn-danger excluir-btn"
                                                style="display: none;">Excluir</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </main>

            <div id="error-popup-container"></div>

            <%- include('../../partials/footer.ejs') %>

                <script type="module">
                    import { setupRowDelete } from '/js/delete-handler.js'

                    document.addEventListener('DOMContentLoaded', function () {
                        const deleteForms = document.querySelectorAll('.data-delete-form');
                        const toggleExcluir = document.getElementById('toggleExcluir');
                        const tableBody = document.getElementById('fornecedor-table-body');

                        setupRowDelete(deleteForms, toggleExcluir, tableBody);
                    });

                </script>
        </body>

        </html>