<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<body>
    <main class="main-content">
        <div class="container">
            <div id="error-popup-container"></div>
            <div class="d-flex justify-content-between align-items-center my-4">
                <h2 class="mb-0 h4">
                    <i class="bi bi-truck me-2"></i>
                    Cadastro de Novo Fornecedor
                </h2>
                <a href="/admin/fornecedores" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Voltar
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form id="fornecedor-form" action="/admin/fornecedores/save" method="POST">
                        <div class="mb-3">
                            <label for="fornecedorName" class="form-label">Nome do Fornecedor</label>
                            <input class="form-control" type="text" id="fornecedorName" name="nome_fornecedor"
                                placeholder="Ex: Fornecedor de Alimentos Ltda." required>
                        </div>
                        <button type="submit" class="btn btn-success" disabled>
                            <i class="bi bi-check-lg me-2"></i>Cadastrar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <%- include('../../partials/footer.ejs') %>

    <script type="module">
        import { setupSingleFieldNew } from '/js/single-field-new.js';

        document.addEventListener('DOMContentLoaded', function () {
            setupSingleFieldNew({
                formSelector: '#fornecedor-form',
                inputName: 'nome_fornecedor',
                redirectUrl: '/admin/fornecedores',
                fieldKey: 'nome_fornecedor'
            });
        });
    </script>
</body>
</html>