<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">
                    <hr>
                    <div class="card">
                        <div class="card-header">
                            <h2>Registrar Ponto de Venda</h2>
                        </div>
                        <div class="card-body">
                            <form id="pdv-form" method="POST" action="/admin/pdvs/save">
                                <input id="pdv-name-input" class="form-control" type="text" name="identificacao"
                                    placeholder="Identificação do Ponto de Venda" required><br>
                                <input id="pdv-desc-input" class="form-control" type="text" name="descricao"
                                    placeholder="Descreva o Ponto de Venda" required><br>
                                <select id="pdv-status-input" class="form-control" name="status" required>
                                    <option value="">Selecione o status</option>
                                    <option value="ativo">Ativo</option>
                                    <option value="inativo">Inativo</option>
                                </select><br>
                                <button type="submit" class="btn btn-success" disabled>Cadastrar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </main>
            <div id="error-popup-container"></div>

            <%- include('../../partials/footer.ejs') %>

                <script type="module">

                    import { setupMultiFieldNew } from '/js/multi-field-new.js'

                    document.addEventListener('DOMContentLoaded', function () {
                        setupMultiFieldNew({
                            formSelector: '#pdv-form',
                            inputFields: [
                                '#pdv-name-input',
                                '#pdv-desc-input'
                            ],
                            selectFields: [
                                '#pdv-status-input'
                            ],
                            requiredFields: ['identificacao', 'descricao', 'status'],
                            redirectUrl: '/admin/pdvs',
                            fieldMap: {
                                identificacao: '#pdv-name-input',
                                descricao: '#pdv-desc-input',
                                status: '#pdv-status-input'
                            }
                        });
                    });

                </script>
        </body>

        </html>