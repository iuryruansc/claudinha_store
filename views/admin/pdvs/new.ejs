<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">
                    <div id="error-popup-container"></div>
                    <div class="d-flex justify-content-between align-items-center my-4">
                        <h2 class="mb-0 h4">
                            <i class="bi bi-shop me-2"></i>
                            Cadastrar Novo PDV
                        </h2>
                        <a href="/admin/pdvs" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Voltar
                        </a>
                    </div>
                    <hr>

                    <div class="card shadow-sm">
                        <div class="card-body">
                            <form id="pdv-form" method="POST" action="/admin/pdvs/save">
                                <div class="form-floating mb-3">
                                    <input id="pdv-name-input" class="form-control" type="text" name="identificacao"
                                        placeholder="Identificação do PDV" required>
                                    <label for="pdv-name-input">Identificação do PDV</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <input id="pdv-desc-input" class="form-control" type="text" name="descricao"
                                        placeholder="Descreva a localização ou função do PDV" required>
                                    <label for="pdv-desc-input">Descrição</label>
                                </div>

                                <div class="form-floating mb-3">
                                    <select id="pdv-status-input" class="form-select" name="status" required>
                                        <option value="" disabled selected>Selecione o status</option>
                                        <option value="ativo">Ativo</option>
                                        <option value="inativo">Inativo</option>
                                    </select>
                                    <label for="pdv-status-input">Status</label>
                                </div>

                                <div class="d-flex justify-content-between mt-4">
                                    <button type="submit" class="btn btn-success" disabled>
                                        <i class="bi bi-check-circle me-2"></i>Cadastrar
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('../../partials/footer.ejs') %>

                <script type="module">
                    import { setupMultiFieldNew } from '/js/lib/multi-field-new.js';

                    document.addEventListener('DOMContentLoaded', function () {
                        setupMultiFieldNew({
                            formSelector: '#pdv-form',
                            inputFields: [
                                '#pdv-name-input',
                                '#pdv-desc-input'
                            ],
                            selectFields: [
                                '#pdv-status-input'
                            ],
                            requiredFields: ['identificacao', 'descricao', 'status'],
                            redirectUrl: '/admin/pdvs',
                            fieldMap: {
                                identificacao: '#pdv-name-input',
                                descricao: '#pdv-desc-input',
                                status: '#pdv-status-input'
                            }
                        });
                    });
                </script>
        </body>

        </html>