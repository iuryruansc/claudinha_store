<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">
                    <div id="error-popup-container"></div>
                    <div class="d-flex justify-content-between align-items-center my-4">
                        <h2 class="mb-0 h4">
                            <i class="bi bi-box-seam me-2"></i>
                            Movimentação de Estoque
                        </h2>
                    </div>
                    <hr>

                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="table-data" class="table table-striped table-hover align-middle">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Data</th>
                                            <th>Tipo</th>
                                            <th>Produtos</th>
                                            <th>Quantidade</th>
                                            <th>Funcionário</th>
                                        </tr>
                                    </thead>
                                    <tbody id="mov-table-body">
                                        <% movs.forEach(mov=> { %>
                                            <tr>
                                                <td>
                                                    <%= formatDate(mov.data_hora) %>
                                                </td>
                                                <td class="text-capitalize">
                                                    <%= mov.tipo %>
                                                </td>

                                                <!-- coluna Produto -->
                                                <td>
                                                    <%= mov.lote?.produto ? mov.lote.produto.nome
                                                        : 'Produto Desconhecido' %>
                                                </td>

                                                <td>
                                                    <%= mov.quantidade %>
                                                </td>
                                                <td class="text-capitalize">
                                                    <%= funcionarios.find(f=> f.id_funcionario ===
                                                        mov.id_funcionario)?.nome
                                                        || '-' %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('../../partials/footer.ejs') %>
        </body>

        </html>