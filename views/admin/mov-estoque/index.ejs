<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">
                    <div id="error-popup-container"></div>
                    <div class="d-flex justify-content-between align-items-center my-4">
                        <h2 class="mb-0 h4">
                            <i class="bi bi-box-seam me-2"></i>
                            Movimentação de Estoque
                        </h2>
                    </div>
                    <hr>

                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="table-data" class="table table-striped table-hover align-middle">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Data</th>
                                            <th>Tipo</th>
                                            <th>Produtos</th>
                                            <th>Quantidade</th>
                                            <th>Funcionário</th>
                                        </tr>
                                    </thead>
                                    <tbody id="mov-table-body">
                                        <% movs.forEach(mov=> { %>
                                            <tr>
                                                <td>
                                                    <%= formatDate(mov.data_hora) %>
                                                </td>
                                                <td>
                                                    <% if (mov.quantidade> 0) { %>
                                                        <span
                                                            class="badge bg-success-subtle text-success-emphasis rounded-pill">
                                                            <i class="bi bi-arrow-down-circle me-1"></i> Entrada
                                                        </span>
                                                        <% } else { %>
                                                            <span
                                                                class="badge bg-danger-subtle text-danger-emphasis rounded-pill">
                                                                <i class="bi bi-arrow-up-circle me-1"></i> Saída
                                                            </span>
                                                            <% } %>
                                                                <span class="ms-1 text-muted small">
                                                                    <%= mov.tipo.replace('_', ' ' ).toLowerCase() %>
                                                                </span>
                                                </td>

                                                <td>
                                                    <% if (mov.lote && mov.lote.produto) { %>
                                                        <div class="fw-semibold">
                                                            <%= mov.lote.produto.nome %>
                                                        </div>
                                                        <small class="text-muted">
                                                            Lote: <%= mov.lote.numero_lote %>
                                                                <% if (mov.id_venda) { %>
                                                                    | <a href="/admin/vendas/detalhes/<%= mov.id_venda %>"
                                                                        class="text-decoration-none">Ver Venda #<%=
                                                                            mov.id_venda %></a>
                                                                    <% } %>
                                                        </small>
                                                        <% } else { %>
                                                            <span class="text-danger fst-italic">Informação do
                                                                Lote/Produto indisponível</span>
                                                            <% } %>
                                                </td>

                                                <td
                                                    class="fw-bold text-center <%= mov.quantidade > 0 ? 'text-success' : 'text-danger' %>">
                                                    <%= mov.quantidade> 0 ? '+' : '' %><%= mov.quantidade %>
                                                </td>
                                                <td class="text-capitalize">
                                                    <%= funcionarios.find(f=> f.id_funcionario ===
                                                        mov.id_funcionario)?.nome
                                                        || '-' %>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('../../partials/footer.ejs') %>
        </body>

        </html>