<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">

                    <div class="d-flex justify-content-between align-items-center my-4">
                        <h2 class="mb-0 h4">
                            <i class="bi bi-cash-stack me-2"></i>
                            Gerenciamento de Caixas
                        </h2>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="table-data" class="table table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Funcionário</th>
                                            <th>Ponto de Venda</th>
                                            <th>Abertura</th>
                                            <th>Fechamento</th>
                                            <th>Saldo Inicial</th>
                                            <th>Saldo Final</th>
                                            <th class="text-center">Status</th>
                                            <th class="text-center">
                                                Ações
                                                <div class="form-check form-switch d-inline-block ms-2"
                                                    data-bs-toggle="tooltip" title="Habilitar exclusão">
                                                    <input class="form-check-input" type="checkbox" role="switch"
                                                        id="toggleExcluir">
                                                </div>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="caixa-table-body">
                                        <% caixas.forEach(caixa=> { %>
                                            <tr>
                                                <td class="text-capitalize">
                                                    <%= caixa.funcionario ? caixa.funcionario.nome : 'Não identificado'
                                                        %>
                                                </td>
                                                <td>
                                                    <%= caixa.pdv ? caixa.pdv.identificacao : '-' %>
                                                </td>
                                                <td
                                                    title="<%= new Date(caixa.data_abertura).toLocaleString('pt-BR') %>">
                                                    <%= new Date(caixa.data_abertura).toLocaleDateString('pt-BR') %>
                                                </td>
                                                <td>
                                                    <% if (caixa.data_fechamento) { %>
                                                        <span
                                                            title="<%= new Date(caixa.data_fechamento).toLocaleString('pt-BR') %>">
                                                            <%= new
                                                                Date(caixa.data_fechamento).toLocaleDateString('pt-BR')
                                                                %>
                                                        </span>
                                                        <% } else { %>
                                                            <span class="text-muted fst-italic">-</span>
                                                            <% } %>
                                                </td>
                                                <td>
                                                    <%= parseFloat(caixa.saldo_inicial).toLocaleString('pt-BR', {
                                                        style: 'currency' , currency: 'BRL' }) %>
                                                </td>
                                                <td>
                                                    <% if (caixa.saldo_final !==null) { %>
                                                        <%= parseFloat(caixa.saldo_final).toLocaleString('pt-BR', {
                                                            style: 'currency' , currency: 'BRL' }) %>
                                                            <% } else { %>
                                                                <span class="text-muted fst-italic">-</span>
                                                                <% } %>
                                                </td>
                                                <td class="text-center">
                                                    <% if (caixa.data_fechamento) { %>
                                                        <span class="badge bg-secondary">Fechado</span>
                                                        <% } else { %>
                                                            <span class="badge bg-success">Aberto</span>
                                                            <% } %>
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group">
                                                        <a href="/admin/caixas/detalhes/<%= caixa.id_caixa %>"
                                                            class="btn btn-sm btn-outline-primary"
                                                            title="Ver detalhes do caixa">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <form data-delete-form class="d-inline"
                                                            action="/admin/caixas/delete/<%= caixa.id_caixa %>"
                                                            method="POST">
                                                            <input type="hidden" name="id_caixa"
                                                                value="<%= caixa.id_caixa %>">
                                                            <button class="btn btn-sm btn-outline-danger excluir-btn"
                                                                title="Excluir registro" style="display: none;">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('../../partials/footer.ejs') %>

                <script type="module">
                    import { setupRowDelete } from '/js/lib/delete-handler.js';
                    document.addEventListener('DOMContentLoaded', function () {
                        const tableBody = document.getElementById('caixa-table-body');

                        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
                        [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));

                        const toggleExcluir = document.getElementById('toggleExcluir');
                        setupRowDelete(document.querySelectorAll('[data-delete-form]'), toggleExcluir, tableBody);
                    });
                </script>
        </body>

        </html>