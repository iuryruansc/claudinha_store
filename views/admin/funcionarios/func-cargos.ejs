<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<body>
    <main class="main-content">
        <div class="container">
            <div id="error-popup-container"></div>
            <div class="d-flex justify-content-between align-items-center my-4">
                <h2 class="mb-0 h4">
                    <i class="bi bi-person-badge me-2"></i>
                    Funcionários do Cargo: <span class="text-primary text-capitalize"><%= cargo_nome %></span>
                </h2>
                <div class="d-flex align-items-center">
                    <a href="/admin/funcionarios/new" class="btn btn-primary">
                        <i class="bi bi-person-plus me-2"></i>
                        Cadastrar Funcionário
                    </a>
                    <a href="/admin/cargos" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left me-2"></i>
                        Voltar aos Cargos
                    </a>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="table-data" class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Nome</th>
                                    <th class="text-center">
                                        <div class="d-flex align-items-center justify-content-center">
                                            <span>Ações</span>
                                            <div class="form-check form-switch ms-3">
                                                <input aria-checked="false" class="form-check-input"
                                                    type="checkbox" role="switch" id="toggleExcluir"
                                                    title="Habilitar exclusão">
                                            </div>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="funcionario-table-body">
                                <% funcionarios.forEach(funcionario => { %>
                                    <tr>
                                        <td class="text-capitalize">
                                            <%= funcionario.nome %>
                                        </td>
                                        <td class="text-center">
                                            <fieldset class="btn-group">
                                                <a href="/admin/funcionarios/edit/<%= funcionario.id_funcionario %>"
                                                    class="btn btn-sm btn-outline-primary me-2" title="Editar">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <form data-delete-form
                                                    action="/admin/funcionarios/delete/<%= funcionario.id_funcionario %>"
                                                    method="POST" style="display: inline;">
                                                    <input type="hidden" name="id_funcionario"
                                                        value="<%= funcionario.id_funcionario %>">
                                                    <button type="submit"
                                                        class="btn btn-sm btn-outline-danger excluir-btn"
                                                        style="display: none;" title="Excluir">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </fieldset>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include('../../partials/footer.ejs') %>

    <script type="module">
        import { setupRowDelete } from '/js/lib/delete-handler.js';

        document.addEventListener('DOMContentLoaded', function () {
            const deleteForms = document.querySelectorAll('[data-delete-form]');
            const toggleExcluir = document.getElementById('toggleExcluir');
            const tableBody = document.getElementById('funcionario-table-body');

            const tooltipTriggerList = document.querySelectorAll('[title]');
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));

            setupRowDelete(deleteForms, toggleExcluir, tableBody);
        });
    </script>
</body>

</html>