<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">
                    <div id="error-popup-container"></div>
                    <div class="d-flex justify-content-between align-items-center my-4">
                        <h2 class="mb-0 h4">
                            <i class="bi bi-person-gear me-2"></i>
                            Editar Funcionário
                        </h2>
                        <a href="/admin/funcionarios" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Voltar
                        </a>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-body">
                            <form id="func-form" method="POST"
                                action="/admin/funcionarios/update/<%= funcionario.id_funcionario %>">

                                <div class="form-floating mb-3">
                                    <input id="func-name-input" class="form-control" type="text" name="nome"
                                        placeholder="Nome do Funcionário" value="<%= funcionario.nome %>" required>
                                    <label for="func-name-input">Nome do Funcionário</label>
                                </div>

                                <input type="hidden" name="id_funcionario" value="<%= funcionario.id_funcionario %>">

                                <div class="d-flex justify-content-between mt-4">
                                    <button type="submit" class="btn btn-success" disabled>
                                        <i class="bi bi-check-circle me-2"></i>Atualizar
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('../../partials/footer.ejs') %>

                <script type="module">
                    import { setupSingleFieldEdit } from '/js/lib/single-field-edit.js';

                    document.addEventListener('DOMContentLoaded', function () {
                        setupSingleFieldEdit({
                            formSelector: '#func-form',
                            inputName: 'nome',
                            redirectUrl: '/admin/funcionarios',
                            fieldKey: 'nome'
                        });
                    });
                </script>
        </body>

        </html>