<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">
                    <div id="error-popup-container"></div>
                    <div class="d-flex justify-content-between align-items-center my-4">
                        <h2 class="mb-0 h4">
                            <i class="bi bi-tags-fill me-2"></i>
                            Cadastro de Nova Marca
                        </h2>
                        <a href="/admin/marcas" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Voltar
                        </a>
                    </div>

                    <div class="card shadow-sm">
                        <div class="card-body">
                            <form id="marca-form" action="/admin/marcas/save" method="POST">
                                <div class="mb-3">
                                    <label for="marca-name-input" class="form-label">Nome da Marca</label>
                                    <input class="form-control" type="text" name="nome_marca" id="marca-name-input"
                                        placeholder="Ex: Nike, Apple, Coca-Cola" required>
                                </div>
                                <button type="submit" class="btn btn-success" id="submit-button" disabled>
                                    <i class="bi bi-check-lg me-2"></i>Cadastrar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('../../partials/footer.ejs') %>

                <script type="module">
                    import { setupSingleFieldNew } from '/js/lib/single-field-new.js';

                    document.addEventListener('DOMContentLoaded', function () {
                        setupSingleFieldNew({
                            formSelector: '#marca-form',
                            inputName: 'nome_marca',
                            redirectUrl: '/admin/marcas',
                            fieldKey: 'nome_marca'
                        });
                    });
                </script>
        </body>

        </html>