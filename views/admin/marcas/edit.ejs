<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">
                    <hr>
                    <div class="card">
                        <div class="card-header">
                            <h2>Editar Marca</h2>
                        </div>
                        <div class="card-body">
                            <form id="marca-form" action="/admin/marcas/update/<%= marca.id_marca %>">
                                <input class="form-control" type="text" name="nome_marca"
                                    placeholder="Defina o nome da marca" value="<%= marca.nome_marca %>"><br>
                                <input type="hidden" name="id_marca" value="<%= marca.id_marca %>">
                                <button type="submit" class="btn btn-success">Atualizar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </main>
            <div id="error-popup-container"></div>

            <%- include('../../partials/footer.ejs') %>

                <script type="module">

                    import { setupSingleFieldEdit } from '/js/single-field-edit.js'

                    document.addEventListener('DOMContentLoaded', function () {
                        setupSingleFieldEdit({
                            formSelector: '#marca-form',
                            inputName: 'nome_marca',
                            redirectUrl: '/admin/marcas',
                            fieldKey: 'nome_marca'
                        });
                    });

                </script>
        </body>

        </html>