<%- include('../../partials/header.ejs') %>
    <%- include('../../partials/navbar.ejs') %>

        <body>
            <main class="main-content">
                <div class="container">
                    <div class="card">
                        <div class="card-header">
                            <h2>Cadastro de Produto</h2>
                        </div>
                        <div class="card-body">
                            <form method="POST" action="/admin/produtos/save" id="category-form">
                                <input class="form-control" type="text" name="nome"
                                    placeholder="Defina o nome do produto" id="produto-name-input" required><br>
                                <input class="form-control" type="text" name="preco"
                                    placeholder="Defina o preço do produto" id="produto-preco-input" required><br>
                                <input class="form-control" type="text" name="codigo_barras"
                                    placeholder="Defina o código de barras do produto" id="produto-code-input"
                                    required><br>
                                <select name="id_categoria" class="form-select" required>
                                    <option value="">Selecione a categoria</option>
                                    <% categorias.forEach(categoria=> { %>
                                        <option value="<%= categoria.id_categoria %>">
                                            <%= categoria.nome %>
                                        </option>
                                        <% }) %>
                                </select><br>
                                <select name="id_fornecedor" class="form-select" id="produto-fornecedor-select"
                                    required>
                                    <option value="">Selecione o fornecedor</option>
                                    <% fornecedores.forEach(fornecedor=> { %>
                                        <option value="<%= fornecedor.id_fornecedor %>">
                                            <%= fornecedor.nome_fornecedor %>
                                        </option>
                                        <% }) %>
                                </select><br>
                                <select name="id_marca" class="form-select" id="produto-marca-select" required>
                                    <option value="">Selecione a marca</option>
                                    <% marcas.forEach(marca=> { %>
                                        <option value="<%= marca.id_marca %>">
                                            <%= marca.nome_marca %>
                                        </option>
                                        <% }) %>
                                </select><br>
                                <button type="submit" class="btn btn-success" disabled>Cadastrar</button>
                            </form>
                        </div>
                    </div>
                </div>

            </main>
            <div id="error-popup-container"></div>

            <%- include('../../partials/footer.ejs') %>

                <script type="module">

                    import { setupMultiFieldNew } from '/js/multi-field-new.js'

                    document.addEventListener('DOMContentLoaded', function () {
                        setupMultiFieldNew({
                            formSelector: '#category-form',
                            inputFields: [
                                '#produto-name-input',
                                '#produto-preco-input',
                                '#produto-code-input'
                            ],
                            selectFields: [
                                'select[name="id_categoria"]',
                                '#produto-fornecedor-select',
                                '#produto-marca-select'
                            ],
                            redirectUrl: '/admin/produtos/new',
                            fieldMap: {
                                nome: '#produto-name-input',
                                preco: '#produto-preco-input',
                                codigo_barras: '#produto-code-input',
                                id_categoria: 'select[name="id_categoria"]',
                                id_fornecedor: '#produto-fornecedor-select',
                                id_marca: '#produto-marca-select'
                            },
                            requiredFields: ['nome', 'preco', 'codigo_barras', 'id_categoria', 'id_fornecedor', 'id_marca']
                        });
                    });

                </script>
        </body>

        </html>