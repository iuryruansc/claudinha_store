<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<body>
    <main class="main-content">
        <div class="container">
            <div id="error-popup-container"></div>
            <div class="d-flex justify-content-between align-items-center my-4">
                <h2 class="mb-0 h4">
                    <i class="bi bi-box-seam me-2"></i>
                    Cadastro de Novo Produto
                </h2>
                <a href="/admin/produtos" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Voltar
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="POST" action="/admin/produtos/save" id="product-form">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input class="form-control" type="text" name="nome"
                                        placeholder="Nome do produto" id="produto-name-input" required>
                                    <label for="produto-name-input"><i class="bi bi-box-seam me-2"></i>Nome do produto</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                                    <div class="form-floating">
                                        <input class="form-control" type="number" step="0.01" name="preco_compra"
                                            placeholder="Preço do produto" id="produto-preco-input" required>
                                        <label for="produto-preco-input">Preço de compra</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <input class="form-control" type="text" name="codigo_barras"
                                        placeholder="Código de barras" id="produto-code-input" required>
                                    <label for="produto-code-input"><i class="bi bi-upc-scan me-2"></i>Código de barras</label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select name="id_categoria" class="form-select" id="produto-categoria-select" required>
                                        <option value="" selected disabled>Selecione...</option>
                                        <% categorias.forEach(categoria=> { %>
                                            <option value="<%= categoria.id_categoria %>">
                                                <%= categoria.nome %>
                                            </option>
                                        <% }) %>
                                    </select>
                                    <label for="produto-categoria-select">Categoria</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select name="id_fornecedor" class="form-select" id="produto-fornecedor-select" required>
                                        <option value="" selected disabled>Selecione...</option>
                                        <% fornecedores.forEach(fornecedor=> { %>
                                            <option value="<%= fornecedor.id_fornecedor %>">
                                                <%= fornecedor.nome_fornecedor %>
                                            </option>
                                        <% }) %>
                                    </select>
                                    <label for="produto-fornecedor-select">Fornecedor</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select name="id_marca" class="form-select" id="produto-marca-select" required>
                                        <option value="" selected disabled>Selecione...</option>
                                        <% marcas.forEach(marca=> { %>
                                            <option value="<%= marca.id_marca %>">
                                                <%= marca.nome_marca %>
                                            </option>
                                        <% }) %>
                                    </select>
                                    <label for="produto-marca-select">Marca</label>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success w-100 mt-4 py-2" disabled>
                            <i class="bi bi-check-circle me-2"></i>Cadastrar Produto
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <%- include('../../partials/footer.ejs') %>

    <script type="module">
        import { setupMultiFieldNew } from '/js/multi-field-new.js';

        document.addEventListener('DOMContentLoaded', function () {
            setupMultiFieldNew({
                formSelector: '#product-form',
                inputFields: [
                    '#produto-name-input',
                    '#produto-preco-input',
                    '#produto-code-input'
                ],
                selectFields: [
                    '#produto-categoria-select',
                    '#produto-fornecedor-select',
                    '#produto-marca-select'
                ],
                redirectUrl: '/admin/produtos',
                fieldMap: {
                    nome: '#produto-name-input',
                    preco: '#produto-preco-input',
                    codigo_barras: '#produto-code-input',
                    id_categoria: '#produto-categoria-select',
                    id_fornecedor: '#produto-fornecedor-select',
                    id_marca: '#produto-marca-select'
                },
                requiredFields: ['nome', 'preco', 'codigo_barras', 'id_categoria', 'id_fornecedor', 'id_marca']
            });
        });
    </script>
</body>
</html>