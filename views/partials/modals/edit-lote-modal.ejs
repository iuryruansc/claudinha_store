<div class="modal fade" id="editLoteModal" tabindex="-1" aria-labelledby="editLoteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form id="edit-lote-form" method="POST">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editLoteModalLabel">Editar Lote</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id_lote" id="edit-id-lote">
                    <input type="hidden" name="id_produto" id="edit-id-produto">

                    <p><strong>Produto:</strong> <span id="edit-produto-nome"></span></p>

                    <div class="mb-3 form-floating">
                        <input class="form-control" type="text" name="numero_lote" id="edit-numero-lote"
                            placeholder="Número do lote" required>
                        <label for="edit-numero-lote">Número do Lote</label>
                    </div>

                    <div class="mb-3 form-floating">
                        <input class="form-control" type="text" name="quantidade" id="edit-quantidade-lote"
                            placeholder="Quantidade" required>
                        <label for="edit-quantidade-lote">Quantidade</label>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3 form-floating">
                                <input class="form-control" type="number" step="0.01" name="preco_compra"
                                    id="edit-preco-compra" placeholder="Preço de Compra" required>
                                <label for="edit-preco-compra">Preço de Compra</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 form-floating">
                                <input class="form-control" type="number" step="0.01" name="preco_venda"
                                    id="edit-preco-venda" placeholder="Preço de Venda" required>
                                <label for="edit-preco-venda">Preço de Venda</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3 form-floating">
                        <input class="form-control" type="text" name="localizacao" id="edit-localizacao"
                            placeholder="Localização">
                        <label for="edit-localizacao">Localização</label>
                    </div>

                    <div class="mb-3 form-floating">
                        <input class="form-control" type="month" name="data_validade" id="edit-data-validade"
                            placeholder="Data de validade">
                        <label for="edit-data-validade">Validade</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </div>
            </div>
        </form>
    </div>
</div>